//exemplo de codigo


package br.com.minhafrota.model;

public class carro {
	//ATRIBUTOS
 String marca;
 String modelo;
 int ano;
 String cor;
 double velocidadeAtual;

//METODOS
 void acelerar(double quantidade) {
	 velocidadeAtual = velocidadeAtual + quantidade; //modifica o atributo
	 System.out.println("Acelerando ! Velocidade atual: " +velocidadeAtual);
 }
 
 void frear(double quantidade) {
	 velocidadeAtual = velocidadeAtual - quantidade;
	 System.out.println("Freando" + velocidadeAtual);
 }
 
 void buzinar() {
	 System.out.println("bibiii!");
 }
}
